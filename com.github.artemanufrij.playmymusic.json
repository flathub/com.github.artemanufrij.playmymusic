{
    "app-id": "com.github.artemanufrij.playmymusic",
    "base": "io.elementary.BaseApp",
    "base-version": "juno",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.artemanufrij.playmymusic",
    "finish-args": [
        /* X11 + XShm */
        "--share=ipc", "--socket=x11",
        /* Wayland */
        "--socket=wayland",
        /* Filesystem */
        "--filesystem=host",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        /* Network (Radio + Covers) */
        "--share=network",
        /* dconf */
        "--metadata=X-DConf=migrate-path=/com/github/artemanufrij/playmymusic/",
        /* Audio */
        "--socket=pulseaudio",
        /* Notifications */
        "--talk-name=org.freedesktop.Notifications",
        /* Inhibitor */
        "--talk-name=org.freedesktop.ScreenSaver",
        /* Media Keys */
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
        "--talk-name=org.mpris.MediaPlayer2",
        "--own-name=org.mpris.MediaPlayer2.com.github.artemanufrij.playmymusic"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://github.com/taglib/taglib/archive/v1.11.1.tar.gz",
                "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
            }]
        },
        {
            "name": "playmymusic",
            "buildsystem": "meson",
            "build-options": {
                "config-opts": [
                    "--buildtype=release"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/artemanufrij/playmymusic/archive/2.2.1.tar.gz",
                "sha256": "a5ea467fc5ed65efe83a5b650019a2562618467c26fda5b0bec49b78b8fdbeb5"
            },{
                "type": "patch",
                "path": "elementary-theme.patch"
            }]
        }
    ]
}
